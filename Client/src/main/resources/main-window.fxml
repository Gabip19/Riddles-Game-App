<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="riddler.client.controller.MainWindowController">
    <VBox alignment="CENTER" layoutX="250.0" layoutY="100.0" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <HBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" VBox.vgrow="ALWAYS">
           <VBox alignment="CENTER">
              <HBox.margin>
                 <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
              </HBox.margin>
              <Label text="Charity Cases">
                 <font>
                    <Font size="24.0"/>
                 </font>
                 <VBox.margin>
                    <Insets bottom="5.0"/>
                 </VBox.margin>
              </Label>
              <TableView fx:id="charityCasesTableView" prefHeight="560.0" prefWidth="400.0" VBox.vgrow="ALWAYS">
                 <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                 </columnResizePolicy>
              </TableView>
           </VBox>
           <VBox alignment="CENTER" prefHeight="700.0" prefWidth="450.0" spacing="25.0" HBox.hgrow="ALWAYS">
              <HBox.margin>
                 <Insets left="10.0" right="10.0" />
              </HBox.margin>
              <Label text="New Donation">
                 <font>
                    <Font size="30.0" />
                 </font>
                 <VBox.margin>
                    <Insets bottom="50.0" />
                 </VBox.margin>
              </Label>
              <HBox alignment="CENTER" prefWidth="392.0">
                 <Label prefWidth="125.0" text="First name:">
                    <font>
                       <Font size="18.0" />
                    </font>
                 </Label>
                 <TextField fx:id="firstNameField" prefWidth="200.0">
                    <HBox.margin>
                       <Insets left="10.0" />
                    </HBox.margin>
                    <font>
                       <Font size="14.0" />
                    </font>
                 </TextField>
              </HBox>
              <HBox alignment="CENTER">
                 <Label prefWidth="125.0" text="Last name:">
                    <font>
                       <Font size="18.0" />
                    </font>
                 </Label>
                 <TextField fx:id="lastNameField" prefWidth="200.0">
                    <HBox.margin>
                       <Insets left="10.0" />
                    </HBox.margin>
                    <font>
                       <Font size="14.0" />
                    </font>
                 </TextField>
              </HBox>
              <HBox alignment="CENTER">
                 <Label prefWidth="125.0" text="Phone number:">
                    <font>
                       <Font size="18.0" />
                    </font>
                 </Label>
                 <TextField fx:id="phoneField" prefWidth="200.0">
                    <HBox.margin>
                       <Insets left="10.0" />
                    </HBox.margin>
                    <font>
                       <Font size="14.0" />
                    </font>
                 </TextField>
              </HBox>
              <HBox alignment="CENTER">
                 <Label prefWidth="125.0" text="Address:">
                    <font>
                       <Font size="18.0" />
                    </font>
                 </Label>
                 <TextField fx:id="addressField" prefWidth="200.0">
                    <font>
                       <Font size="14.0" />
                    </font>
                    <HBox.margin>
                       <Insets left="10.0" />
                    </HBox.margin>
                 </TextField>
              </HBox>
              <HBox alignment="CENTER">
                 <Label prefWidth="125.0" text="Sum:">
                    <font>
                       <Font size="18.0" />
                    </font>
                 </Label>
                 <TextField fx:id="sumField" prefWidth="200.0">
                    <font>
                       <Font size="14.0" />
                    </font>
                    <HBox.margin>
                       <Insets left="10.0" />
                    </HBox.margin>
                 </TextField>
              </HBox>
            <Label fx:id="errorLabel" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="ERROR" textAlignment="CENTER" textFill="RED">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
              <Button fx:id="addDonationBtn" mnemonicParsing="false" text="Add donation">
                 <font>
                    <Font size="18.0" />
                 </font>
                 <VBox.margin>
                    <Insets top="30.0" />
                 </VBox.margin>
              </Button>
              <Button fx:id="searchDonorsBtn" mnemonicParsing="false" text="Search">
                 <font>
                    <Font size="18.0" />
                 </font>
                 <VBox.margin>
                    <Insets top="30.0" />
                 </VBox.margin>
              </Button>
            <Button fx:id="logoutBtn" mnemonicParsing="false" text="Logout">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
           </VBox>
           <VBox alignment="CENTER">
              <HBox.margin>
                 <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
              </HBox.margin>
              <Label text="Donors">
                 <font>
                    <Font size="24.0"/>
                 </font>
                 <VBox.margin>
                    <Insets bottom="5.0"/>
                 </VBox.margin>
              </Label>
              <TableView fx:id="donorsTableView" prefHeight="560.0" prefWidth="400.0" VBox.vgrow="ALWAYS">
                 <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                 </columnResizePolicy>
              </TableView>
           </VBox>
        </HBox>
    </VBox>
</AnchorPane>
